---
import BaseLayout from '../layouts/BaseLayout.astro';

const siteBase = Astro.site || 'https://sun-envidiado.com';
const imageUrl = new URL('/default.png', siteBase).toString();
const seoMeta = {
  title: 'About — Sun Envidiado',
  description:
    "I'm Sun Envidiado, a software developer from Manila who focuses on Flutter app development. Outside of programming, I play games, do karaoke, and cook. This is my corner of the internet where I share work projects, personal posts, and random thoughts.",
  tags: [
    'about sun envidiado',
    'software developer manila',
    'flutter developer',
    'personal website',
    'developer blog',
  ],
};

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ProfilePage',
  mainEntity: {
    '@type': 'Person',
    '@id': `${siteBase}/#person`,
    name: 'Sun Envidiado',
    url: siteBase,
    image: imageUrl,
    jobTitle: 'Software Developer',
    description: seoMeta.description,
    knowsAbout: ['Flutter'],
    addressLocality: 'Manila, Philippines',
    sameAs: ['https://github.com/photosunthesis', 'https://www.linkedin.com/in/sunenvidiado/'],
    interestIn: ['Coding', 'Gaming', 'Karaoke', 'Cooking'],
  },
};
---

<BaseLayout
  title={seoMeta.title}
  description={seoMeta.description}
  tags={seoMeta.tags}
  type="website"
  jsonLd={jsonLd}
>
  <div class="about-content">
    <article class="about-article" aria-labelledby="about-title">
      <h1 id="about-title" class="about-title sr-only">About Me</h1>
      <div class="back-to-home">
        <a href="/" aria-label="Go to homepage">← Back to home</a>
      </div>
      <p>
        My name is <span class="highlight">Sun Envidiado</span>. I'm a software developer from
        Manila who currently focuses on Flutter app development.
      </p>
      <p>
        Outside of programming, you'll find me playing games, doing karaoke, or scrolling through
        TikTok for unhealthy amounts of time. I cook too, though I'm barely decent at it. My dream
        is to one day have a proper kitchen with quality tools and utensils so I can make
        Michelin-star meals.
      </p>
      <p>
        I designed this site to look like vim and retro computers because I think they're cool
        (though ironically, I use VS Code). You'll find a mix of work projects, personal posts, and
        random thoughts here.
      </p>
    </article>
  </div>
</BaseLayout>

<style lang="scss">
  .about-content {
    max-width: 480px;
    margin: 1.5rem;
    color: var(--foreground);
    text-align: left;
    padding: 0 1rem;

    @media (max-width: 480px) {
      margin: 0 2rem;
    }
  }

  :global(.highlight) {
    color: var(--orange);
    font-weight: bold;
  }
</style>
