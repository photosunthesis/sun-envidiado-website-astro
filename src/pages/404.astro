---
import BaseLayout from "../layouts/BaseLayout.astro";

const siteCopy = {
	pageTitle: "404 - Page Not Found — Sun Envidiado",
	pageDescription: "The page you are looking for does not exist.",
	kaomojis: [
		"ヽ(ー_ー )ノ",
		"ヽ(´ー` )┌",
		"┐(‘～` )┌",
		"ヽ(　￣д￣)ノ",
		"┐(￣ヘ￣)┌",
		"ヽ(￣～￣　)ノ",
		"╮(￣_￣)╭",
		"ヽ(ˇヘˇ)ノ",
		"┐(￣～￣)┌",
		"╮(￣～￣)╭",
		"┐( ´ д ` )┌",
		"╮(︶︿︶)╭",
		"┐(￣∀￣)┌",
		"┐( ˘ ､ ˘ )┌",
		"╮( ˘ ､ ˘ )╭",
		"┐( ˘_˘ )┌",
		"╮( ˘_˘ )╭",
		"┐(￣ヮ￣)┌",
	],
	headingText: "Error 404",
	notFoundMessage:
		"The page you're looking for doesn't exist. Double-check the URL — it may be a typo, or the page could have been removed.",
			homeUrlLabel: ":home<Enter>",
	footerPrefix: "Tap or type",
	footerSuffix: "to go back to the homepage.",
};

const siteBase = Astro.site || "https://sun-envidiado.com";
const absoluteUrl = new URL("/404", siteBase).toString();
const imagePath = "/android-chrome-512x512.png";
const absoluteImage = new URL(imagePath, siteBase).toString();
---

<BaseLayout
	title={siteCopy.pageTitle}
	url={absoluteUrl}
	description={siteCopy.pageDescription}
	image={absoluteImage}
	noIndex={true}
>
	<div class="not-found-container">
			<h1 id="404-heading" class="not-found-heading">
			{siteCopy.headingText} <i class="not-found-kaomoji">
				{siteCopy.kaomojis[Math.floor(Math.random() * siteCopy.kaomojis.length)]}
			</i>
		</h1>

		<p class="not-found-message" role="status" aria-live="polite" aria-labelledby="404-heading">
			{siteCopy.notFoundMessage}
		</p>
		<p class="not-found-end">
			{siteCopy.footerPrefix} <a href="/" aria-label="Go to homepage">{siteCopy.homeUrlLabel}</a> {siteCopy.footerSuffix}
		</p>
	</div>
</BaseLayout>

<style lang="scss">
	.not-found-heading {
		font-size: 2rem;
		color: var(--purple);
	}

	.not-found-kaomoji {
		color: var(--comment);
		font-style: normal;
		padding-left: 0.5rem;
		font-size: 1.8rem;
	}

	.not-found-message {
		margin-top: 1rem;
	}

	.not-found-container {
		max-width: 600px;
		margin: 1.5rem;
		color: var(--foreground);
		text-align: left;
		padding: 2rem;
	}

	.not-found-end {
		color: var(--comment);
		margin-bottom: 1rem;
	}
</style>
