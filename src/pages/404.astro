---
import BaseLayout from '../layouts/BaseLayout.astro';

const kaomojis = [
  'ヽ(ー_ー )ノ',
  'ヽ(´ー` )┌',
  '┐(‘～` )┌',
  'ヽ(　￣д￣)ノ',
  '┐(￣ヘ￣)┌',
  'ヽ(￣～￣　)ノ',
  '╮(￣_￣)╭',
  'ヽ(ˇヘˇ)ノ',
  '┐(￣～￣)┌',
  '╮(￣～￣)╭',
  '┐( ´ д ` )┌',
  '╮(︶︿︶)╭',
  '┐(￣∀￣)┌',
  '┐( ˘ ､ ˘ )┌',
  '╮( ˘ ､ ˘ )╭',
  '┐( ˘_˘ )┌',
  '╮( ˘_˘ )╭',
  '┐(￣ヮ￣)┌',
];

const kaomoji = kaomojis[Math.floor(Math.random() * kaomojis.length)];

// SEO metadata
const seoMeta = {
  title: 'Page Not Found',
  description: 'The page you are looking for does not exist.',
  noIndex: true,
};
---

<BaseLayout title={seoMeta.title} description={seoMeta.description} noIndex={seoMeta.noIndex}>
  <div class="not-found-container">
    <h1 id="404-heading" class="not-found-heading">
      Error 404
      <i class="not-found-kaomoji">{kaomoji}</i>
    </h1>

    <p class="not-found-message" role="status" aria-live="polite" aria-labelledby="404-heading">
      The page you're looking for doesn't exist. Double-check the URL — it may be a typo, or the
      page could have been removed.
    </p>
    <p class="not-found-end">
      Tap/type
      <a href="/" aria-label="Go to homepage">:home&lt;Enter&gt;</a>
      to go back to the homepage.
    </p>
  </div>
</BaseLayout>

<style lang="scss">
  .not-found-heading {
    font-size: 2rem;
    color: var(--purple);
  }

  .not-found-kaomoji {
    color: var(--comment);
    font-style: normal;
    padding-left: 0.5rem;
    font-size: 1.8rem;
  }

  .not-found-message {
    margin-top: 1rem;
  }

  .not-found-container {
    max-width: 600px;
    margin: 1.5rem;
    color: var(--foreground);
    text-align: left;
    padding: 2rem;
  }

  .not-found-end {
    color: var(--comment);
    margin-bottom: 1rem;
  }
</style>
