---
import BaseLayout from '../layouts/BaseLayout.astro';

// SEO-optimized metadata
const seoMeta = {
  title: 'Contact — Sun Envidiado',
  description:
    'Wanna chat? Hit me up via email, LinkedIn, or GitHub. Always down to talk about code, games, or just connect with cool people.',
  tags: ['contact sun envidiado', 'get in touch', 'developer contact', 'email', 'connect'],
};

// JSON-LD Structured Data
const siteBase = Astro.site || 'https://sun-envidiado.com';
const imageUrl = new URL('/default.png', siteBase).toString();

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: seoMeta.title,
  description: seoMeta.description,
  url: `${siteBase}/contact`,
  mainEntity: {
    '@type': 'Person',
    '@id': `${siteBase}/#person`,
    name: 'Sun Envidiado',
    email: 'hello@sun-envidiado.com',
    url: siteBase,
    image: imageUrl,
    contactPoint: {
      '@type': 'ContactPoint',
      email: 'hello@sun-envidiado.com',
      contactType: 'Professional Inquiries',
    },
    sameAs: ['https://github.com/photosunthesis', 'https://www.linkedin.com/in/sunenvidiado/'],
  },
};
---

<BaseLayout
  title={seoMeta.title}
  description={seoMeta.description}
  tags={seoMeta.tags}
  type="website"
  jsonLd={jsonLd}
>
  <div class="contact-content">
    <h1 class="sr-only">Contact</h1>
    <div class="back-to-home">
      <a href="/" aria-label="Go to homepage">← Back to home</a>
    </div>
    <div class="contact-container">
      <ul class="contact-list">
        <li class="contact-row">
          <span class="contact-type">Email me:</span>
          <a
            class="contact-contact"
            href="mailto:hello@sun-envidiado.com"
            aria-label="Email me hello@sun-envidiado.com"
          >
            hello@sun-envidiado.com
          </a>
        </li>
        <li class="contact-row">
          <span class="contact-type">LinkedIn:</span>
          <a
            class="contact-contact"
            href="https://www.linkedin.com/in/sunenvidiado/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Connect with me on LinkedIn in/sunenvidiado/"
          >
            in/sunenvidiado/
          </a>
        </li>
        <li class="contact-row">
          <span class="contact-type">GitHub:</span>
          <a
            class="contact-contact"
            href="https://github.com/photosunthesis"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Check out my GitHub @photosunthesis"
          >
            @photosunthesis
          </a>
        </li>
      </ul>
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  .contact-content {
    max-width: 480px;
    margin: 1.5rem;
    color: var(--foreground);
    text-align: left;
    padding: 0 1rem;

    @media (max-width: 600px) {
      margin: 1.5rem 0;
      padding: 0 1rem;
    }
  }

  .contact-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .contact-row {
    margin-bottom: 0.8rem;
  }

  .back-to-home {
    padding-bottom: 2rem;
  }
</style>
