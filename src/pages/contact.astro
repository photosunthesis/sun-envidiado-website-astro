---
import BaseLayout from "../layouts/BaseLayout.astro";

type ContactItem = {
  label: string;
  value: string;
  href: string;
};

const contactItems: ContactItem[] = [
  {
    label: "Email me at",
    value: "sunadriann31@gmail.com",
    href: "mailto:sunadriann31@gmail.com",
  },
  {
    label: "Connect on LinkedIn at",
    value: "in/sunenvidiado/",
    href: "https://www.linkedin.com/in/sunenvidiado/",
  },
  {
    label: "Check out my GitHub at",
    value: "@photosunthesis",
    href: "https://github.com/photosunthesis",
  },
];

const homeUrlLabel = ":home<Enter>";
---

<BaseLayout
  title="Contact"
  url="/contact"
  description="Get in touch with Sun Envidiado."
>
  <div class="contact-content">
    <div class="contact-container">
      {
        contactItems.map((item) => (
          <div class="contact-row">
            <span class="contact-type">{item.label}</span>
            <a
              class="contact-contact"
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={"Go to " + item.href}
            >
              {item.value}
            </a>
          </div>
        ))
      }
    </div>
    <p class="contact-end">
      Tap or type <a href="/">{homeUrlLabel}</a> to go back to the homepage.
    </p>
  </div>
</BaseLayout>

<style>
  .contact-content {
    max-width: 600px;
    margin: 1.5rem;
    color: var(--foreground);
    font-size: 1rem;
    line-height: 1.8;
    text-align: left;
    padding: 0 1rem;
  }

  .contact-end {
    color: var(--comment);
  }
</style>
