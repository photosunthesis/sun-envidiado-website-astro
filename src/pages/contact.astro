---
import BaseLayout from "../layouts/BaseLayout.astro";

const siteCopy = {
  pageTitle: "Contact — Sun Envidiado",
  pageHeadline: "Contact",
  pageDescription: "Get in touch with Sun Envidiado — email, LinkedIn, GitHub.",
  homeUrlLabel: ":home<Enter>",
  contactItems: [
    {
      label: "Email me",
      value: "sunadriann31@gmail.com",
      href: "mailto:sunadriann31@gmail.com",
    },
    {
      label: "Connect with me on LinkedIn",
      value: "in/sunenvidiado/",
      href: "https://www.linkedin.com/in/sunenvidiado/",
    },
    {
      label: "Check out my GitHub",
      value: "@photosunthesis",
      href: "https://github.com/photosunthesis",
    },
  ],
};

const siteBase = Astro.site || "https://sun-envidiado.com";
const pagePath = "/contact";
const absoluteUrl = new URL(pagePath, siteBase).toString();
const imagePath = "/android-chrome-512x512.png";
const absoluteImage = new URL(imagePath, siteBase).toString();

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  url: absoluteUrl,
  headline: siteCopy.pageTitle,
  description: "Ways to contact Sun Envidiado, including email and social profiles.",
  mainEntity: {
    "@type": "Person",
    name: "Sun Envidiado",
    email: "mailto:sunadriann31@gmail.com",
    url: siteBase,
    image: absoluteImage,
  },
};
---

<BaseLayout
  title={siteCopy.pageTitle}
  url={absoluteUrl}
  description={siteCopy.pageDescription}
  image={absoluteImage}
  type="contact"
  tags={["contact", "email", "connect"]}
  jsonLd={jsonLd}
>
  <div class="contact-content">
    <h1 class="sr-only">{siteCopy.pageHeadline}</h1>
    <div class="contact-container">
      <ul class="contact-list">
        {
          siteCopy.contactItems.map((item) => {
            const isExternal = /^https?:\/\//i.test(item.href);
            return (
              <li class="contact-row">
                <span class="contact-type">{item.label}:</span>
                <a
                  class="contact-contact"
                  href={item.href}
                  {...(isExternal
                    ? { target: "_blank", rel: "noopener noreferrer" }
                    : {})}
                  aria-label={`${item.label} ${item.value}`}
                >
                  {item.value}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <footer class="contact-footer">
      Type <a href="/" aria-label="Go to homepage">{siteCopy.homeUrlLabel}</a> to go back
      to the homepage.
    </footer>
  </div>
</BaseLayout>

<style lang="scss">
  .contact-content {
    max-width: 600px;
    margin: 1.5rem;
    color: var(--foreground);
    text-align: left;
    padding: 0 1rem;
  }

  .contact-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .contact-row {
    margin-bottom: 0.8rem;
  }

  .contact-footer {
    color: var(--comment);
  }
</style>
