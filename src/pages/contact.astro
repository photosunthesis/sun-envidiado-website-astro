---
import BaseLayout from "../layouts/BaseLayout.astro";

type ContactItem = {
  label: string;
  value: string;
  href: string;
};

const contactItems: ContactItem[] = [
  {
    label: "Email me",
    value: "sunadriann31@gmail.com",
    href: "mailto:sunadriann31@gmail.com",
  },
  {
    label: "Connect with me on LinkedIn",
    value: "in/sunenvidiado/",
    href: "https://www.linkedin.com/in/sunenvidiado/",
  },
  {
    label: "Check out my GitHub",
    value: "@photosunthesis",
    href: "https://github.com/photosunthesis",
  },
];

const homeUrlLabel = ":home<Enter>";
const siteBase = Astro.site || "https://sun-envidiado.com";
const pagePath = "/contact";
const absoluteUrl = new URL(pagePath, siteBase).toString();
const imagePath = "/android-chrome-512x512.png";
const absoluteImage = new URL(imagePath, siteBase).toString();

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  url: absoluteUrl,
  headline: "Contact — Sun Envidiado",
  description:
    "Ways to contact Sun Envidiado, including email and social profiles.",
  mainEntity: {
    "@type": "Person",
    name: "Sun Envidiado",
    email: "mailto:sunadriann31@gmail.com",
    url: siteBase,
    image: absoluteImage,
  },
};
---

<BaseLayout
  title="Contact — Sun Envidiado"
  url={absoluteUrl}
  description="Get in touch with Sun Envidiado — email, LinkedIn, GitHub."
  image={absoluteImage}
  type="contact"
  tags={["contact", "email", "connect"]}
  jsonLd={jsonLd}
>
  <div class="contact-content">
    <h1 class="sr-only">Contact</h1>
    <div class="contact-container">
      <ul class="contact-list">
        {
          contactItems.map((item) => {
            const isExternal = /^https?:\/\//i.test(item.href);
            return (
              <li class="contact-row">
                <span class="contact-type">{item.label}:</span>
                <a
                  class="contact-contact"
                  href={item.href}
                  {...(isExternal
                    ? { target: "_blank", rel: "noopener noreferrer" }
                    : {})}
                  aria-label={`${item.label} ${item.value}`}
                >
                  {item.value}
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <p class="contact-end">
      Tap or type <a href="/" aria-label="Go to homepage">{homeUrlLabel}</a> to go
      back to the homepage.
    </p>
  </div>
</BaseLayout>
