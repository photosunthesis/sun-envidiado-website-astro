---
import CommandBar from "../components/CommandBar.astro";
import "../styles/main.scss";

// Allow pages to pass either top-level props or a `frontmatter` object (markdown pages)
const {
	// explicit props (for .astro pages or manual usage)
	title: propTitle,
	description: propDescription,
	image = "/android-chrome-512x512.png",
	url = import.meta.env.SITE || "https://sun-envidiado.com",
	type = "website",
	noIndex = false,
	jsonLd = null,
	pubDate: propPubDate = undefined,
	tags: propTags = [],
	// frontmatter supplied by Markdown pages when they set `layout:`
	frontmatter = {},
} = Astro.props || {};

// Prefer values from frontmatter when available to support markdown layouts
const title = frontmatter.title || propTitle || "Sun Envidiado";
const description =
	frontmatter.description ||
	propDescription ||
	"Personal website where I share my thoughts about anything and everything.";
const pubDate = frontmatter.pubDate || propPubDate;
const tags =
	Array.isArray(frontmatter.tags) && frontmatter.tags.length ? frontmatter.tags : propTags;
const imageToUse = frontmatter.image || image;

// --- Canonical/OG URL logic ---
const canonical = new URL(
	String(url || "/").replace(/\/?$/, "/"),
	Astro.site || "https://sun-envidiado.com"
).toString();
const fullImage = new URL(String(imageToUse), Astro.site || "https://sun-envidiado.com").toString();
// Short labels used by blog footer (kept for parity with previous BlogLayout)
const backUrlLabel = ":back<Enter>";
const homeUrlLabel = ":home<Enter>";
---

<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#07070f" />
		<meta name="msapplication-navbutton-color" content="#07070f" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="#07070f" />
		<meta name="description" content={description} />
		<meta name="robots" content={noIndex ? "noindex, nofollow" : "index, follow"} />
		<link rel="canonical" href={canonical} />
		<meta name="referrer" content="no-referrer-when-downgrade" />
		<meta name="color-scheme" content="light dark" />
		<meta name="author" content={title} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		{pubDate && <meta property="article:published_time" content={pubDate} />}
		{
			Array.isArray(tags) &&
				tags.length > 0 &&
				tags.map((tag) => <meta property="article:tag" content={tag} />)
		}

		<!-- Open Graph / Facebook -->
		<meta property="og:site_name" content={title} />
		<meta property="og:type" content={type} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonical} />
		<meta property="og:image" content={fullImage} />

		<!-- Twitter -->
		<meta name="twitter:card" content={image ? "summary_large_image" : "summary"} />
		<meta name="twitter:site" content={`@${title.replace(/\s+/g, "").toLowerCase()}`} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={fullImage} />

		<slot name="seo" />

		<!-- Site resources -->
		<link
			rel="preload"
			href="/fonts/Web437_ToshibaSat_8x14.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Minimal skip-link styles (hidden visually, visible on keyboard focus) -->
		<style>
			.skip-link {
				position: absolute;
				left: -999px;
				top: auto;
				width: 1px;
				height: 1px;
				overflow: hidden;
				z-index: -999;
			}
			.skip-link:focus {
				position: fixed;
				left: 1rem;
				top: 1rem;
				width: auto;
				height: auto;
				padding: 0.5rem 1rem;
				background: #111;
				color: #fff;
				z-index: 1000;
			}
		</style>

		{jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}
	</head>
	<body class="vim-root crt-text-ca">
		<script src="/src/scripts/crtPreference.ts"></script>
		<!-- Skip link for keyboard users -->
		<a class="skip-link" href="#main" aria-label="Skip to main content">Skip to content</a>

		<div class="main-flex-container">
			<main id="main" class="vim-main-content" tabindex="-1">
				<div class="centered-vim">
					{
						// If this page has a pubDate it is treated as a blog post â€” render blog markup
						pubDate ? (
							<div class="blog-layout">
								<h1 id="post-title" class="blog-title">
									{title}
								</h1>
								<p class="post-pub-date">
									{new Date(pubDate).toLocaleDateString("en-US", {
										year: "numeric",
										month: "long",
										day: "numeric",
									})}
								</p>

								<article class="blog-article" aria-labelledby="post-title">
									<slot />
								</article>

								<footer
									class="blog-footer"
									role="contentinfo"
									aria-label="Post navigation and actions"
								>
									<p class="blog-footer-text">
										Type
										<button
											class="link-like"
											type="button"
											onclick="history.back();"
											aria-label="Go back"
										>
											{backUrlLabel}
										</button>
										to return to the previous page, or
										<a href="/" aria-label="Go to homepage">
											{homeUrlLabel}
										</a>
										to go to the homepage.
									</p>
								</footer>
							</div>
						) : (
							<slot />
						)
					}
				</div>
			</main>
		</div>
		<CommandBar />
		<!-- CSS-only CRT Overlay Container (controlled by user preference) -->
		<div id="crt-overlay-container" class="crt-enabled"></div>
	</body>
</html>
